{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "pretty": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "module": "commonjs",
    "target": "es2017",

    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["./src/**/*"]
}
